<configs>
<append xpath="/quests">

	<quest_list id="Farmer_quests">
		<quest id="quest_FindFrankie"/>
	</quest_list>
	
<quest id="Farmer Location">
				<property name="group_name" value="quest_ToolsOfCitizenship" />
				<property name="offer" value="This Will Help You Locate A Farmer" />
				<property name="name" value="Trader Location" />
				<property name="subtitle_key" value="Good Luck" />
				<property name="description_key" value="This Will Help You Locate A Farmer" />
				<property name="icon" value="ui_game_symbol_map_trader" />
				<property name="category_key" value="quest" />
				<property name="difficulty" value="easy" />
				<property name="shareable" value="false" />
				<property name="repeatable" value="true" />
				<action type="ShowTip" value="quest_WhiteRiverCitizen1_description">
				<property name="delay" value="3"/>
				</action>
				<objective type="Goto" id="npcTraderFrankie" value="5" phase="1"/>
				<objective type="InteractWithNPC">
				<property name="phase" value="2"/>
				</objective>
				<reward type="Exp" value="0"/>
			</quest>
	
	<quest id="quest_FindFrankie" group_name_key="Farmer_quests">
		<property name="name_key" value="Farmer - Find Frankie the farmer"/>		
		<property name="description_key" value="Find Frankie the farmer to ask for his help."/>
		<property name="icon" value="ui_game_symbol_quest"/>
		<property name="repeatable" value="true"/>
		<property name="category_key" value="quest"/>
		<property name="difficulty" value="medium"/>
		<property name="offer_key" value="In order to keep your farm safe from unwanted guest, you will need some help. Farmer Frankie offered to keep your enemies away from your farm. Just use this spawn item to contact him, and he will be right there."/>
		<property name="shareable" value="false"/>		
		
		<objective type="RandomGoto" value="500-800" phase="1">
			<property name="completion_distance" value="50"/>
		</objective>	
		
		<action type="SpawnEnemy" id="FarmerFrankie" value="1" phase="2"/>
		
		<objective type="InteractWithNPC">
			<property name="phase" value="3"/>
		</objective>
		<reward type="Exp" value="100"/>		
		<reward type="SkillPoints" value="1" />
		<reward type="Item" id="spawnFrankie" value="1"/>
	</quest>
	
	
	
</append>
</configs>